<?xml version="1.0" encoding="utf-8"?>
<com.delphiaconsulting.timestar.view.widget.EndlessLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainer"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="@dimen/full_margin">

        <TextView
            android:id="@+id/column0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Column 0"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/column1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Column 1"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/column2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Column 2"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/column3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Column 3"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/column4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Column 4"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/column5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Column 5"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/column6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Column 6"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/column7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Column 7"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/column8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Column 8"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/column9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Column 9"
            tools:visibility="visible"/>
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_grey"/>
</com.delphiaconsulting.timestar.view.widget.EndlessLinearLayout>